# Fonction pour afficher les r√©sultats des APIs
show_api_results() {
    local id=$1
    
    # Google Books
    echo ""
    echo -e "${BLUE}üîµ GOOGLE BOOKS API${NC}"
    local g_test=$(get_meta_value "$id" "_g_title")
    local google_timestamp=$(get_meta_timestamp "$id" "_google_last_attempt")
    
    if [ -n "$g_test" ]; then
        echo -e "${GREEN}‚úÖ Statut : Donn√©es collect√©es avec succ√®s${NC}"
        echo -e "${CYAN}‚è∞ Collect√© le : $google_timestamp${NC}"
    else
        local google_attempt=$(get_meta_value "$id" "_google_last_attempt")
        if [ -n "$google_attempt" ]; then
            echo -e "${YELLOW}‚ö†Ô∏è  Statut : Aucune donn√©e trouv√©e pour cet ISBN${NC}"
            echo -e "${YELLOW}‚è∞ Derni√®re tentative : $google_attempt${NC}"
        else
            echo -e "${RED}‚ùå Statut : Jamais collect√©${NC}"
        fi
    fi
    
    # ISBNdb
    echo ""
    echo -e "${GREEN}üü¢ ISBNDB API${NC}"
    local i_test=$(get_meta_value "$id" "_i_title")
    local isbndb_timestamp=$(get_meta_timestamp "$id" "_isbndb_last_attempt")
    
    if [ -n "$i_test" ]; then
        echo -e "${GREEN}‚úÖ Statut : Donn√©es collect√©es avec succ√®s${NC}"
        echo -e "${CYAN}‚è∞ Collect√© le : $isbndb_timestamp${NC}"
    else
        local isbndb_attempt=$(get_meta_value "$id" "_isbndb_last_attempt")
        if [ -n "$isbndb_attempt" ]; then
            echo -e "${YELLOW}‚ö†Ô∏è  Statut : Aucune donn√©e trouv√©e pour cet ISBN${NC}"
            echo -e "${YELLOW}‚è∞ Derni√®re tentative : $isbndb_attempt${NC}"
        else
            echo -e "${RED}‚ùå Statut : Jamais collect√©${NC}"
        fi
    fi
    
    # Open Library
    echo ""
    echo -e "${YELLOW}üü† OPEN LIBRARY API${NC}"
    local o_test=$(get_meta_value "$id" "_o_title")
    local openlibrary_timestamp=$(get_meta_timestamp "$id" "_openlibrary_last_attempt")
    
    if [ -n "$o_test" ]; then
        echo -e "${GREEN}‚úÖ Statut : Donn√©es collect√©es avec succ√®s${NC}"
        echo -e "${CYAN}‚è∞ Collect√© le : $openlibrary_timestamp${NC}"
    else
        local openlibrary_attempt=$(get_meta_value "$id" "_openlibrary_last_attempt")
        if [ -n "$openlibrary_attempt" ]; then
            echo -e "${YELLOW}‚ö†Ô∏è  Statut : Aucune donn√©e trouv√©e pour cet ISBN${NC}"
            echo -e "${YELLOW}‚è∞ Derni√®re tentative : $openlibrary_attempt${NC}"
        else
            echo -e "${RED}‚ùå Statut : Jamais collect√©${NC}"
        fi
    fi
    
    # Claude AI
    echo ""
    echo -e "${PURPLE}ü§ñ CLAUDE AI${NC}"
    local claude_desc=$(get_meta_value "$id" "_claude_description")
    
    if [ -n "$claude_desc" ] && [ ${#claude_desc} -gt 20 ]; then
        echo -e "${GREEN}‚úÖ Statut : Description g√©n√©r√©e avec succ√®s${NC}"
        echo -e "${CYAN}üìù Longueur : ${#claude_desc} caract√®res${NC}"
    else
        echo -e "${RED}‚ùå Statut : Pas de description Claude${NC}"
    fi
    
    # Groq AI
    echo ""
    echo -e "${CYAN}üß† GROQ AI${NC}"
    local groq_desc=$(get_meta_value "$id" "_groq_description")
    
    if [ -n "$groq_desc" ] && [ ${#groq_desc} -gt 20 ]; then
        echo -e "${GREEN}‚úÖ Statut : Description g√©n√©r√©e avec succ√®s${NC}"
        echo -e "${CYAN}üìù Longueur : ${#groq_desc} caract√®res${NC}"
    else
        echo -e "${RED}‚ùå Statut : Pas de description Groq${NC}"
    fi
    
    # === AFFICHAGE MARTINGALE COMPL√àTE ===
    if [ "$MODE" != "simple" ] && [ "$MODE" != "nostatus" ]; then
        echo ""
        echo ""
        echo "‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê"
